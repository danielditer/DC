<?xml version="1.0" encoding="utf-8"?>
<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="111">
  <server artifactsdir="artifacts" agentAutoRegisterKey="405f61aa-6898-4e65-9225-8acd13bb5f26" webhookSecret="c4b4cc3e-ca9c-4aec-b18d-ee4562daa30c" commandRepositoryLocation="default" serverId="fc1acd78-d87c-4316-93ad-4ae8d933e959" tokenGenerationKey="4bd1ceab-b99f-47bf-b7d4-ba7e3add7a4d" />
  <pipelines group="WEB-APP">
    <pipeline name="quickstart-app" lockBehavior="lockOnFailure">
      <materials>
        <git url="https://github.com/danielditer/DC.git" />
      </materials>
      <stage name="Build">
        <jobs>
          <job name="Building">
            <tasks>
              <exec command="./gradle/task3/gradlew">
                <arg>clean</arg>
                <arg>assemble</arg>
                <arg>-p</arg>
                <arg>gradle/task3/</arg>
                <runif status="passed" />
              </exec>
            </tasks>
            <artifacts>
              <artifact type="build" src="gradle/task3/build/libs/*.jar" dest="Build" />
            </artifacts>
          </job>
        </jobs>
      </stage>
      <stage name="Test">
        <jobs>
          <job name="Testing">
            <tasks>
              <exec command="./gradle/task3/gradlew">
                <arg>test</arg>
                <arg>-p</arg>
                <arg>gradle/task3/</arg>
                <runif status="passed" />
              </exec>
            </tasks>
            <tabs>
              <tab name="UNIT_TESTS" path="report/index.html" />
            </tabs>
            <artifacts>
              <artifact type="test" src="gradle/task3/build/test-results/test/*.xml" dest="UnitTest" />
              <artifact type="test" src="gradle/task3/build/reports/tests/test/index.html" dest="Report" />
            </artifacts>
          </job>
        </jobs>
      </stage>
    </pipeline>
  </pipelines>
  <agents>
    <agent hostname="User-PC" ipaddress="127.0.0.1" uuid="fa15dd8a-aa9a-42ca-ad50-f7442eb0ab04" />
  </agents>
</cruise>
